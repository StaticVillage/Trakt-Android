<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.staticvillage.trakt_android_sdk">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".auth.AuthActivity"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="staticvillage"
                    android:scheme="mitv" />
            </intent-filter>

        </activity>

        <activity android:name=".calendar.CalendarActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".genre.GenreActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".movie.MovieActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".recommendation.RecommendationActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".search.SearchActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".show.ShowActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".season.SeasonActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".episode.EpisodeActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".sync.SyncActivity"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>